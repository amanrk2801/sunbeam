{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile & Run C++",
            "type": "shell",
            "command": "C:/TDM-GCC-64/bin/g++.exe",
            "args": [
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.exe"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Compile and run C++ files using MinGW"
        }
    ]
}
